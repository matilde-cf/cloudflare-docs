---
import { Image } from "astro:assets";

import { StarlightIcon } from "..";
import HeroImage from "~/assets/images/release-notes/hero.svg";
---

<div
	class="w-full sm:h-[300px] flex justify-center mb-16 bg-gradient-to-r from-[#FFE9CB99] to-[#FFFFFF99] border-b-2 border-b-[#EAEAEA]"
>
	<div class="flex justify-between self-center md:w-[64rem] py-4 sm:py-0">
		<div class="w-full self-center max-sm:text-center sm:items-start">
			<div class="!mt-0 justify-items-center sm:hidden">
				<Image src={HeroImage} alt="hero image" height="240" />
			</div>
			<h1 class="sm:!mt-0">Changelog</h1>
			<p>
				New updates and improvements at Cloudflare.
				<span>
					<a
						href="/release-notes/rss.xml"
						class="no-underline text-[#056DFF] dark:text-[#79B1FF] hover:!text-[#056DFF] dark:hover:!text-[#79B1FF] hover:bg-[#DCEBFF] dark:hover:bg-[#002B66] hover:rounded-[4px] px-2"
					>
						Subscribe to RSS
						<StarlightIcon
							name="rss"
							size="18px"
							class="!inline align-text-top"
						/>
					</a>
				</span>
			</p>
		</div>
		<div class="!mt-0 hidden sm:block">
			<Image src={HeroImage} alt="hero image" height="240" />
		</div>
	</div>
</div>
